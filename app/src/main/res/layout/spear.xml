<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@drawable/darkblue"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="16dp"
        android:overScrollMode = "never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="Spear Combos"
                android:paddingTop = "20dp"
                android:paddingBottom = "20dp"
                android:textColor="#FFFFFF"
                android:textSize="36sp"
                app:fontFamily="@font/erasbdfont" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="163dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                app:srcCompat="@drawable/spear" />

            <Button
                android:id="@+id/spear_slight_dlight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mybutton"
                android:drawablePadding="2dip"
                android:fontFamily="@font/erasbdfont"
                android:paddingLeft="10dip"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Slight (Side Light Attack) + Dlight (Down Light Attack)"
                android:textAllCaps="false"
                android:textColor="@drawable/buttontextcolor"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="40dp"
                android:text="Damage: All Health (0 - 700 dmg)\nDexterity: Any\n\nIt can be optimally with a dodge window of 2 frames"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                app:fontFamily="@font/erasbdfont" />

            <Button
                android:id="@+id/spear_nlight_dash_slight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mybutton"
                android:drawablePadding="2dip"
                android:fontFamily="@font/erasbdfont"
                android:paddingLeft="10dip"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Nlight (Neutral Light Attack) + Dash + Slight (Side Light Attack)"
                android:textAllCaps="false"
                android:textColor="@drawable/buttontextcolor"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="40dp"
                android:text="Damage: White to Red (0 - 160 dmg)\nDexterity: Any\n\nAt early damage can be hit with a dodge window of 10 frames\nAs damage increases the dodge window increases\nBest used as an option to catch opponent dodging out\nAlso good as a setup for the above move"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                app:fontFamily="@font/erasbdfont" />

            <Button
                android:id="@+id/spear_sair_nlight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mybutton"
                android:drawablePadding="2dip"
                android:fontFamily="@font/erasbdfont"
                android:paddingLeft="10dip"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Sair (Side Air Attack) + Nlight (Neutral Light Attack)"
                android:textAllCaps="false"
                android:textColor="@drawable/buttontextcolor"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="40dp"
                android:text="Damage: White to Light Orange (0 - 80 dmg)\nDexterity: Any\n\nAt early damage can be hit with a dodge window of 2 frames\nAt 80 dmg the dodge window is between 7 - 9 frames\nBest used as an option to catch opponent dodging out\nAlso good as a setup for the above move"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                app:fontFamily="@font/erasbdfont" />

            <Button
                android:id="@+id/spear_dlight_sair"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mybutton"
                android:drawablePadding="2dip"
                android:fontFamily="@font/erasbdfont"
                android:paddingLeft="10dip"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Dlight (Down Light Attack) + Sair (Side Air Attack)"
                android:textAllCaps="false"
                android:textColor="@drawable/buttontextcolor"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="40dp"
                android:text="Damage: All Health (0 - 700 dmg)\nDexterity: Any\n\nCan be preceded by slight (slight + dlight + sair)"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                app:fontFamily="@font/erasbdfont" />

            <Button
                android:id="@+id/spear_dlight_nair"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mybutton"
                android:drawablePadding="2dip"
                android:fontFamily="@font/erasbdfont"
                android:paddingLeft="10dip"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Dlight (Down Light Attack) + Nair (Neutral Air Attack)"
                android:textAllCaps="false"
                android:textColor="@drawable/buttontextcolor"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="40dp"
                android:text="Damage: All Health (0 - 700 dmg)\nDexterity: Any\n\nCan be preceded by slight (slight + dlight + nair)"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                app:fontFamily="@font/erasbdfont" />

            <Button
                android:id="@+id/spear_dlight_recovery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mybutton"
                android:drawablePadding="2dip"
                android:fontFamily="@font/erasbdfont"
                android:paddingLeft="10dip"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Dlight (Down Light Attack) + Recovery"
                android:textAllCaps="false"
                android:textColor="@drawable/buttontextcolor"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="40dp"
                android:text="Damage: All Health (0 - 700 dmg)\nDexterity: Any\n\nCan be preceded by slight (slight + dlight + recovery)"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                app:fontFamily="@font/erasbdfont" />

            <Button
                android:id="@+id/spear_dlight_dodge_groundPound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mybutton"
                android:drawablePadding="2dip"
                android:fontFamily="@font/erasbdfont"
                android:paddingLeft="10dip"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Dlight (Down Light Attack) + Dodge + Ground Pound"
                android:textAllCaps="false"
                android:textColor="@drawable/buttontextcolor"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="40dp"
                android:text="Damage: All Health (0 - 700 dmg)\nDexterity: Any\n\nIt can be optimally with a dodge window of 3 frames\nBest used to catch opponent dodging down"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                app:fontFamily="@font/erasbdfont" />

            <Button
                android:id="@+id/spear_dlight_gc_dlight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mybutton"
                android:drawablePadding="2dip"
                android:fontFamily="@font/erasbdfont"
                android:paddingLeft="10dip"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Dlight (Down Light Attack) + GC + Dlight (Down Light Attack)"
                android:textAllCaps="false"
                android:textColor="@drawable/buttontextcolor"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="40dp"
                android:text="Damage: All Health (0 - 700 dmg)\nDexterity: Any\n\nIt can be optimally with a dodge window of 2 frames\n\nCan be setup with an slight\n(slight + dlight + gc + dlight)\n\nCan be followed by the above options\n(dlight + gc + dlight + sair/recovery/nair)"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                app:fontFamily="@font/erasbdfont" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>