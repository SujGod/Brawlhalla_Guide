<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:fontFamily="@font/erasbdfont"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Options"
        android:textColor="#3F51B5"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/musicBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:max="50"
        android:minWidth="100dp"
        android:paddingTop="75dp"
        android:paddingBottom="15dp"
        android:progressDrawable="@drawable/seek_bar"
        android:thumb="@drawable/seek_thumb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="241dp"
        android:layout_height="129dp"
        android:fontFamily="@font/erasbdfont"
        android:gravity="center"
        android:paddingBottom="50dp"
        android:text="Music Volume"
        android:textColor="#3F51B5"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/musicBar" />

    <ToggleButton
        android:id="@+id/musicToggle"
        android:layout_width="133dp"
        android:layout_height="60dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/mybutton"
        android:checked="false"
        android:fontFamily="@font/erasbdfont"
        android:gravity="center"
        android:padding="15dp"
        android:text="ToggleButton"
        android:textColor="@drawable/toggle_drawable"
        android:textOff="ON"
        android:textOn="OFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/musicBar" />

    <SeekBar
        android:id="@+id/sfxBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="86dp"
        android:max="50"
        android:minWidth="100dp"
        android:paddingTop="75dp"
        android:paddingBottom="15dp"
        android:progress="25"
        android:progressDrawable="@drawable/seek_bar"
        android:thumb="@drawable/seek_thumb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="241dp"
        android:layout_height="129dp"
        android:fontFamily="@font/erasbdfont"
        android:gravity="center"
        android:paddingBottom="50dp"
        android:text="SFX Volume"
        android:textColor="#3F51B5"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sfxBar" />

    <ToggleButton
        android:id="@+id/soundToggle"
        android:layout_width="133dp"
        android:layout_height="60dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/mybutton"
        android:checked="false"
        android:fontFamily="@font/erasbdfont"
        android:gravity="center"
        android:padding="15dp"
        android:text="ToggleButton"
        android:textColor="@drawable/toggle_drawable"
        android:textOff="ON"
        android:textOn="OFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/sfxBar" />


</androidx.constraintlayout.widget.ConstraintLayout>